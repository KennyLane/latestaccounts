<div class="nested-fields">

    <div class="form-group form-group-sm">
      <span style="color:red">
        <% f.object.errors[:base].each do |key, value| %>
        <div>
          <%= key %>
        </div>
        <% end %>
      </span>
    </div>

    <%= f.input :type, :as => :hidden %>
    <div class="row">
        <div class="col-sm-1">
            <%= f.association :case, label_method: :reference, label: "Case", value_method: :id %>  
        </div>
        <div class="col-sm-2">
          <%= f.input :trdetails, label: "Description" %>
        </div>
        <div class="col-sm-1">
          <%= f.input :tramount, label: "Amount"%>
        </div>
        <div class="col-sm-1">
            <%= f.input :troutlaybill, collection: ["Billing", "Outlay"], label: "Type", include_blank: false %>
        </div>


        <% if f.object.new_record? %>
            <div class="col-sm-2">
                <%= f.association :fromclientbank, label_method: :desc, label: "From Client Account" %>  
            </div>
        
            <% if f.object.askclientoverdraw or f.object.clientoverdraw=="1" %>
            <div class="col-sm-1">
                  <%= f.input :clientoverdraw, :as => :boolean, label: "Overdraw Case" %> 
              </div>
            <% end %>
        <% end %>
    


        <% if @i==1 %>
            <div class="col-md-1">
                <%= link_to_remove_association button_tag('Remove Line', type: "button"), f %>
            </div>
        <% end %>

    </div>


</div>