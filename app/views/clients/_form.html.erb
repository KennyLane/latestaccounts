<%= simple_form_for(@client) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :firstname %>
    <%= f.input :middlename %>
    <%= f.input :lastname %>
    <%= f.association :clientstatus, label_method: :code %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
